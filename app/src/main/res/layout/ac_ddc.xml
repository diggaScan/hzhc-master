<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plateform_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/hc_location_layout" />

        <include layout="@layout/check_status_layout" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/form_margin_left"
            android:layout_marginRight="@dimen/form_margin_left"
            android:background="@color/white">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/info_display_item_height"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:text="身份证号码"
                        android:textColor="@color/str_color"
                        android:textSize="@dimen/str_text_size" />

                    <TextView
                        android:id="@+id/id_num"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:textColor="@color/content_color"
                        android:textSize="@dimen/content_text_size" />

                    <Button
                        android:id="@+id/ddc_check"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:text="核查"
                        android:textColor="@color/light_blue"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/info_display_item_height"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:text="姓名"
                        android:textColor="@color/str_color"
                        android:textSize="@dimen/str_text_size" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:textColor="@color/content_color"
                        android:textSize="@dimen/content_text_size" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/info_display_item_height"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:text="电动车牌号"
                        android:textColor="@color/str_color"
                        android:textSize="@dimen/str_text_size" />

                    <TextView
                        android:id="@+id/plateform_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:textColor="@color/content_color"
                        android:textSize="@dimen/content_text_size" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/info_display_item_height"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:text="品牌"
                        android:textColor="@color/str_color"
                        android:textSize="@dimen/str_text_size" />

                    <TextView
                        android:id="@+id/car_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:textColor="@color/content_color"
                        android:textSize="@dimen/content_text_size" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/info_display_item_height"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:text="车架号"
                        android:textColor="@color/str_color"
                        android:textSize="@dimen/str_text_size" />

                    <TextView
                        android:id="@+id/cjh"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:textColor="@color/content_color"
                        android:textSize="@dimen/content_text_size" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/info_display_item_height"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:text="发动机号"
                        android:textColor="@color/str_color"
                        android:textSize="@dimen/str_text_size" />

                    <TextView
                        android:id="@+id/fdjh"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:textColor="@color/content_color"
                        android:textSize="@dimen/content_text_size" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/info_display_item_height"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:text="非机动车序列号"
                        android:textColor="@color/str_color"
                        android:textSize="@dimen/str_text_size" />

                    <TextView
                        android:id="@+id/fdj_sequence"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/form_text_margin_left"
                        android:text="无"
                        android:textColor="@color/content_color"
                        android:textSize="@dimen/content_text_size" />
                </TableRow>

            </TableLayout>

            <ImageView
                android:id="@+id/xp"
                android:layout_width="117dp"
                android:layout_height="120dp"
                android:layout_gravity="right|top"
                android:layout_marginTop="38dp" />
        </FrameLayout>


    </LinearLayout>

</ScrollView>