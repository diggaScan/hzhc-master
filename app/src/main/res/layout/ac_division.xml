<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="诊察核录"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/app_name"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@id/app_name"
                android:textSize="11sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/divison_tab_margin"
            android:background="@drawable/emblem"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/lmhc"
            android:layout_width="@dimen/division_tab_width"
            android:layout_height="@dimen/division_tab_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/divison_tab_margin"
            android:background="@drawable/division_tab_bkg1_selector"
            android:gravity="center"
            android:text="路面核查"
            android:textColor="@color/tab_color_one"
            android:textSize="@dimen/division_text_size" />

        <TextView
            android:id="@+id/hchhl"
            android:layout_width="@dimen/division_tab_width"
            android:layout_height="@dimen/division_tab_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/divison_tab_margin"
            android:background="@drawable/division_tab_bkg2_selector"
            android:gravity="center"
            android:text="护城河核录"
            android:textColor="@color/tab_color_two"
            android:textSize="@dimen/division_text_size" />

        <TextView
            android:id="@+id/abhl"
            android:layout_width="@dimen/division_tab_width"
            android:layout_height="@dimen/division_tab_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/divison_tab_margin"
            android:background="@drawable/division_tab_bkg3_selector"
            android:gravity="center"
            android:text="安保核录"
            android:textColor="@color/tab_color_three"
            android:textSize="@dimen/division_text_size" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/loading_icon"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorPrimary" />
    </FrameLayout>
</FrameLayout>