<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/module_title_shape"
            android:padding="15dp"
            android:text="境外人员组合查询"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nation"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/input_height"
            android:layout_above="@id/paper_cate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="@dimen/input_margin_bot"
            android:background="@null"
            android:drawableLeft="@drawable/ic_union_nation"
            android:gravity="center"
            android:hint="点击选择选择国家"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />


        <com.concretejungle.spinbutton.SpinButton
            android:id="@+id/paper_cate"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/input_margin_bot"
            android:background="@drawable/palteform_underline"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:gravity="center"
            android:hint="选择证书类型"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />


        <EditText
            android:inputType="number"
            android:id="@+id/paper_num"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_below="@id/paper_cate"
            android:layout_alignRight="@id/vehicle"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="@dimen/input_margin_bot"
            android:background="@drawable/palteform_underline"
            android:gravity="center"
            android:hint="证件号码"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />


        <Button
            android:id="@+id/query"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_below="@id/paper_num"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_location_enter_bkg"
            android:text="查询"
            android:textColor="@color/white" />
    </RelativeLayout>
</ScrollView>