<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/module_title_shape"
            android:padding="@dimen/module_title_padding"
            android:text="案件查询"
            android:textColor="@color/white"
            android:textSize="@dimen/module_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/case_src"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/input_height"
            android:layout_above="@id/case_id"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="@dimen/input_margin_bot"
            android:background="@null"
            android:drawableLeft="@drawable/ic_dw"
            android:gravity="center"
            android:hint="点击选择管辖单位名称"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />

        <EditText
            android:id="@+id/case_id"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_above="@id/case_cate"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="@dimen/input_margin_bot"
            android:background="@drawable/palteform_underline"
            android:gravity="center"
            android:hint="案件编号"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/info_input_text_size" />

        <TextView
            android:id="@+id/case_cate"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="@dimen/input_margin_bot"
            android:background="@drawable/palteform_underline"
            android:gravity="center"
            android:hint="案件类别"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/info_input_text_size" />

        <TextView
            android:id="@+id/case_time"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_below="@id/case_cate"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="@dimen/input_margin_bot"
            android:background="@drawable/palteform_underline"
            android:gravity="center"
            android:hint="选择案件时间"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />


        <Button
            android:id="@+id/query"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_below="@id/case_time"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_location_enter_bkg"
            android:text="查询"
            android:textColor="@color/white" />
    </RelativeLayout>
</ScrollView>