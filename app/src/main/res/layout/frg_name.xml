<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/module_title_shape"
            android:padding="@dimen/module_title_padding"
            android:text="全国人口组合查询"
            android:textColor="@color/white"
            android:textSize="@dimen/module_title_size"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_above="@id/gender"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="@dimen/input_margin_bot"
            android:background="@drawable/palteform_underline"
            android:gravity="center"
            android:hint="姓名"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />

        <com.concretejungle.spinbutton.SpinButton
            android:id="@+id/gender"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/input_margin_bot"
            android:background="@drawable/palteform_underline"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:gravity="center"
            android:hint="性别"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/birth"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_below="@id/gender"
            android:layout_alignRight="@id/vehicle"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="@dimen/input_margin_bot"
            android:background="@drawable/palteform_underline"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:gravity="center"
            android:hint="出生日期"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/info_input_text_size" />

        <TextView
            android:id="@+id/territory"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_below="@id/birth"
            android:layout_alignRight="@id/vehicle"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="@dimen/input_margin_bot"
            android:background="@drawable/palteform_underline"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:gravity="center"
            android:hint="地区"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />


        <Button
            android:id="@+id/query"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_below="@id/territory"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_location_enter_bkg"
            android:text="查询"
            android:textColor="@color/white" />
    </RelativeLayout>
</ScrollView>