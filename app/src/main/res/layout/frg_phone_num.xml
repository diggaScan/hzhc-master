<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/module_title_shape"
            android:padding="@dimen/module_title_padding"
            android:text="电话号码查询"
            android:textColor="@color/white"
            android:textSize="@dimen/module_title_size"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phone_num"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/plateform_item_height"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/input_margin_bot"
            android:background="@drawable/palteform_underline"
            android:digits="1234567890"
            android:ems="10"
            android:gravity="center"
            android:hint="输入电话号码"
            android:inputType="number"
            android:maxLength="18"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />

        <Button
            android:id="@+id/query"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_below="@id/phone_num"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_location_enter_bkg"
            android:text="查询"
            android:textColor="@color/white" />


    </RelativeLayout>

</ScrollView>